<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="
	http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<description>KBO Batch</description>
 	
    <batch:job id="PLAYER_INFO_JOB" >
		<batch:step id="playerSearchStep">
			<batch:tasklet transaction-manager="transactionManager" start-limit="100" >
				<batch:chunk reader="playerInfoItemReader" processor="playerInfoItemProcessor" writer="playerInfoItemWriter" commit-interval="1" />
			</batch:tasklet>
		</batch:step>
	</batch:job>

    <bean id="playerInfoItemWriter" class="org.springframework.batch.item.database.HibernateItemWriter">
        <property name="sessionFactory" ref="sessionFactory" />
        <property name="dao" ref="playerDao" />
    </bean>

    <bean id="playerDao" class="com.iecanfly.kbo.dao.player.HibernatePlayerDao">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>


</beans>
